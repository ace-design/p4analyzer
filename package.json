			"./packages/*"
		]
	},
	"dependencies": {
		"vscode-languageclient": "~8.0"
	},
	"devDependencies": {
		"vsce": "^2",
		"typescript": "^4",
		"esbuild": "latest",
		"@nrwl/cli": "~15.2",
		"@nrwl/workspace": "~15.2",
		"@types/node": "^16",
		"@types/vscode": "^1"
	}
}
